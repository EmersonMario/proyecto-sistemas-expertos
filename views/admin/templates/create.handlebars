<div class="container text-white">
    <h1 class="mb-5 p-3 text-center text-white">Crear Nueva Plantilla</h1>

    <div class="row p-4">
        <div class="col-md-12">
            <form action="/admin/template/create" method="POST" enctype="multipart/form-data" id="frm-test">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input type="text" name="title" id="title" class="form-control mb-5" placeholder="Escriba el tíitulo de la plantilla" required>
                </div>
                <div class="form-group">
                    <label for="description">Descripción</label>
                    <textarea name="description" class="form-control mb-5" placeholder="Escriba la descripción de la plantilla" required></textarea>
                </div>
                <div class="form-group">
                    <div class="input-group mb-5">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">Subir</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="form-control custom-file-input" id="inputGroupFile01" name="uploadedFile1" aria-describedby="inputGroupFileAddon01" required>
                            <label class="custom-file-label" for="inputGroupFile01">Escoja el HTML de la plantilla</label>
                        </div>
                    </div>
                </div> 
                <div class="form-group">
                    <div class="input-group mb-5">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon02">Subir</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="form-control custom-file-input" id="inputGroupFile02" name="uploadedFile2" aria-describedby="inputGroupFileAddon02" required>
                            <label class="custom-file-label" for="inputGroupFile02">Escoja el CSS asociado a la plantilla</label>
                        </div>
                    </div>
                </div>  
               <div class="form-group">
                    <div class="input-group mb-5">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">Subir</span>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="form-control custom-file-input" id="inputGroupFile03" name="uploadedFile3" aria-describedby="inputGroupFileAddon03" required>
                            <label class="custom-file-label" for="inputGroupFile03">Escoja el Javascript asociado a la plantilla</label>
                        </div>
                    </div>
                </div> 

                <button class="btn btn-outline-warning btn-lg" type="submit">Crear Plantilla</button>

            </form>
        </div>
    </div>
</div>