<div class="row">

      <!-- Blog Entries Column -->
      <div class="col-md-8">

        <h1 class="my-4 mb-5">Todos los post's <small>de la comunidad</small>
        </h1>

        <!-- Blog Post -->
        {{#each posts}}
          <div class="card mb-5">
            <img class="card-img-top" src="{{file}}" alt="Card image cap">
            <div class="card-body">
              <h2 class="card-title">{{title}}</h2>
              <!--<p class="card-text">Lorem ipsum dolor sit corporis animi vero voluptate voluptatibus possimus, veniam magni quis!</p>-->
              <a href="/post/{{id}}" class="btn btn-primary">Leer más &rarr;</a>
            </div>
            <div class="card-footer text-muted">
              Posteado el {{creationDate}} por
              <a href="#">{{user}}</a>
            </div>
          </div>
        {{/each}}
        

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
          <li class="page-item">
            <a class="page-link" href="#">&larr; Más Viejos</a>
          </li>
          <li class="page-item disabled">
            <a class="page-link" href="#">Más Nuevos &rarr;</a>
          </li>
        </ul>

      </div>

      <!-- Sidebar Widgets Column -->
      <div class="col-md-4">
        
        <!-- Side Widget -->
        <div class="card my-4">
          {{#each configurations}}
          <h5 class="card-header">{{pageTitle}}</h5>
          <div class="card-body text-center">
            <img src="{{fileLogo}}" alt="Logotipo" class="img-fluid" style="height: 200px;">
            <p>{{pageDescription}}</p>
          </div>
          {{/each}}
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
          <h5 class="card-header">Categorías</h5>
          <div class="card-body">
            <div class="row">
              <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                  {{#each categories}}
                  <li>
                    <a href="#">{{title}}</a>
                  </li>
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
        </div>

        

      </div>

    </div>
    <!-- /.row -->